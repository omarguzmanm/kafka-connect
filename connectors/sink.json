{
  "name": "pg-sink-connector",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    
    "connection.url": "jdbc:postgresql://postgres-destino:5432/destino",
    "connection.user": "postgres",
    "connection.password": "postgres",

    "topics": "postgres.public.usuarios",
    "table.name.format": "usuarios",

    "insert.mode": "upsert",
    "pk.mode": "record_key",
    "pk.fields": "id",
    "delete.enabled": "true",

    "transforms": "unwrap",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",

    "auto.create": "true",
    "auto.evolve": "true"
  }
}
